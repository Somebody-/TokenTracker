<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ekflagristoj.tokentracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ekflagristoj.tokentracker.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ekflagristoj.tokentracker.CreateTokenActivity"
            android:label="@string/title_activity_create_token"
            android:parentActivityName="com.ekflagristoj.tokentracker.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ekflagristoj.tokentracker.MainActivity" />
        </activity>
        <activity
            android:name="com.ekflagristoj.tokentracker.CreatePlayerActivity"
            android:label="@string/title_activity_create_player"
            android:parentActivityName="com.ekflagristoj.tokentracker.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ekflagristoj.tokentracker.MainActivity" />
        </activity>
        <activity
            android:name="com.ekflagristoj.tokentracker.RandomizerActivity"
            android:label="@string/title_activity_randomizer" >
        </activity>
        <activity
            android:name="com.ekflagristoj.tokentracker.SpawnTokenActivity"
            android:label="@string/title_activity_spawn_token"
            android:parentActivityName="com.ekflagristoj.tokentracker.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ekflagristoj.tokentracker.MainActivity" />
        </activity>
    </application>

</manifest>